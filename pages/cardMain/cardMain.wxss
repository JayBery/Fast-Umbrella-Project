/* pages/cardMain/cardMain.wxss */
.user-card{
  background: #ffffff;
  width: 89vw;
  margin: 0 auto;
  padding: 30rpx;
  border-radius: 50rpx;
}

.card-top{
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center;  */
  font-size: 28rpx
}

.card-top image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 88rpx;
}

.card-top .username{
  margin-left: 10rpx;
  color: #979797;
  font-size: 26rpx;
}

.card-top .username text{
  color: #87c1c2;
  font-size: 28rpx;
}


.img-middle {
  margin: 30rpx 0;
  width: 70%;
}
.img-middle image{
  width: 89vw;
  
}

.text-bottom{
  font-size: 32rpx;
  line-height:1.5em;
}

.icon-bottom{
  font-size: 48rpx;
  line-height: 28rpx;
  margin-top: 20rpx;
  color: #ACACAC;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icon-bottom text{
  font-size: 27rpx;
}

.left-say{
  margin-left: 30rpx;
}

.right-share{
  flex: 1;
  text-align: right;
}

.rowView{
  background: #f7f7f7;
  color: #767676;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 30rpx
}

.user{
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center;  */
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  width: 89vw;
}

.user image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 88rpx;
}

.user .username{
  margin-left: 30rpx;
  color: #979797;
  font-size: 26rpx;
}

.user .username text{
  color: #87c1c2;
  font-size: 28rpx;
}

.right{
  flex: 1;
  text-align: right;
  font-size: 40rpx;
  color: #ACACAC;
}

.userLike{
  color: #ACACAC;
}

.textMain{
  width: 89vw;
  margin: 0 auto;
  margin-left: 155rpx;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}

.allRow{
  border-bottom: 1px solid #ececec;
}

.seeAll{
  margin: 60rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  font-size: 28rpx;
}

.iconRight{
  font-size: 25rpx;
}