page{
  height: 60%;
  background: #f3f3f3;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 158rpx;
  height: 158rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.header {
    margin: 90rpx 0 90rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

.need-card{
  height: 60%;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  background: #ffffff;
}

.need-card .van-cell {
  height: 120rpx;
  padding: 6% 20px 0 20px!important;
}


.imagesize{
 display: flex;                    
 justify-content: center;         
}
.imagesize image { 
  width: 200rpx;
  height: 200rpx;
  padding: 20rpx;
}
.scantext{
  display: flex;                    
  justify-content: center;

}