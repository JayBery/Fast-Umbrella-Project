<view hover-class="none" hover-stop-propagation="false" style="width: 100%; height: 100%;">

  <map id="map" longitude="{{longitude}}" latitude=" {{latitude}}" markers="{{markers}}" scale="18" show-location style="width: 100%; height: 100%;"></map>
  <view class="need-card">
    <van-tabs active="{{ active }}" bind:change="onChange">
      <van-tab title="送伞">
        <van-cell-group>
          <van-field
            value="{{ startPlace }}"
            icon="column"
            left-icon="location-o"
            placeholder="从哪里出发"
            bind:blur="startFinish"
          />
          <van-field
            value="{{ endPlace }}"
            icon="column"
            left-icon="location-o"
            placeholder="送到哪里去"
            bind:blur="endFinish"
          />
          <van-field
            value="{{ phone }}"
            left-icon="phone-o"
            placeholder="输入您的联系电话"
            bind:blur="phoneFinish"
          />
        </van-cell-group>
      </van-tab>
      <van-tab title="借伞">
        <view class="imagesize">
          <image src="/images/scanning.png" bindtap='getScancode'></image>
        </view>
        <view class="scantext">扫描借伞</view>
      </van-tab>
    </van-tabs>
  </view>
</view>