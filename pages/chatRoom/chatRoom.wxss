/* pages/chatRoom/chatRoom.wxss */
page{
  background: #f5f5f5;
}

.tips{
  margin: 30rpx auto;
  height: 60rpx;
  line-height: 60rpx;
  width: 60vw;
  background: #ECECEC;
  border-radius: 38rpx;
  color: #cbcbcb;
  font-size: 26rpx;
  text-align: center;
}

.head{
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.headMe{
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  float: right
}

.head image{
  height: 90rpx;
  width: 90rpx;
  border-radius: 90rpx;
}

.headMe image{
  height: 90rpx;
  width: 90rpx;
  border-radius: 90rpx;
}

.time{
  color: #989898;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.bubbleTail{
  background-color: #fff;
  padding: 7px 10px;
  display: inline-block;
  border-radius: 6px;
  margin-left: 22rpx;
  position: relative;
}

.bubbleTailMe{
  float: right;
  background-color: #fff;
  padding: 7px 10px;
  display: inline-block;
  border-radius: 6px;
  margin-right: 22rpx;
  position: relative;
}

.bubbleTail::after{
  content: '';
  border: 8px solid #ffffff00;
  border-right: 8px solid #fff;
  position: absolute;
  top: 6px;
  left: -16px;
}

.bubbleTailMe::after{
  content: '';
  border: 8px solid #ffffff00;
  border-left: 8px solid #fff;
  position: absolute;
  top: 6px;
  right: -16px;
}

.sayBottom{
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom:0px;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sayBottom .emj{
  margin-left: 10rpx;
}

.sayBottom .pic{
  margin-left: 4rpx;
}

.sayBottom .input{
  margin-left: 20rpx;
  font-size: 32rpx;
  width: 60vw;
}

.sayBottom .sent{
  margin-left: 10vw;
  color: #8880d3;
}

.iphoneX-height{
  padding-bottom: 66rpx;
}