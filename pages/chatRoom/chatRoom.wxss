/* pages/chatRoom/chatRoom.wxss */
page{
  background: #f5f5f5;
}

.tips{
  margin: 30rpx auto;
  height: 60rpx;
  line-height: 60rpx;
  width: 60vw;
  background: #ECECEC;
  border-radius: 38rpx;
  color: #cbcbcb;
  font-size: 26rpx;
  text-align: center;
}

.head{
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.headMe{
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  float: right
}

.head image{
  height: 90rpx;
  width: 90rpx;
  border-radius: 90rpx;
}

.headMe image{
  height: 90rpx;
  width: 90rpx;
  border-radius: 90rpx;
}

.time{
  color: #989898;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.bubbleTail{
  background-color: #fff;
  padding: 7px 10px;
  display: inline-block;
  border-radius: 6px;
  margin-left: 22rpx;
  position: relative;
}

.bubbleTailMe{
  float: right;
  background-color: #fff;
  padding: 7px 10px;
  display: inline-block;
  border-radius: 6px;
  margin-right: 22rpx;
  position: relative;
}

.bubbleTail::after{
  content: '';
  border: 8px solid #ffffff00;
  border-right: 8px solid #fff;
  position: absolute;
  top: 6px;
  left: -16px;
}

.bubbleTailMe::after{
  content: '';
  border: 8px solid #ffffff00;
  border-left: 8px solid #fff;
  position: absolute;
  top: 6px;
  right: -16px;
}

.sayBottom{
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom:0px;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sayBottom .emj{
  margin-left: 10rpx;
}

.sayBottom .pic{
  margin-left: 4rpx;
}

.sayBottom .input{
  margin-left: 20rpx;
  font-size: 32rpx;
  width: 60vw;
}

.sayBottom .sent{
  margin-left: 10vw;
  color: #8880d3;
}

.iphoneX-height{
  padding-bottom: 66rpx;
}

.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.cf-box {
  padding: 8px 5px;
  display: flex;
  justify-content: center;
}

.t-info textarea {
  background: red;
  padding: 8px 5px;
  height: 30px;
  box-sizing: border-box;
  width: 100%;
  display: block;
}

.cf-content {
  background-color: #f2f2f2;
  padding: 8px 5px;
  font-size: 12px;
  height: 30px;
  max-height: 40px;
  width: 100%;
}

.cf-send {
  width: 50px;
  display: flex !important;
  flex-direction: column;
  justify-content: center;
  margin-left: 5px;
  border-radius: 2px;
  text-align: center;
  padding: 0 2px !important;
  font-size: 12px;
  /* background-color: #000; */
  color: #8880d3;
}

.cf-send.touch-active:active {
  background-color: #b03f3e;
}

.emoji {
  background-color: #fff;
  width: 30px;
  height: 30px;
  text-align: center;
  padding-top: 2px;
  box-sizing: border-box;
  font-size: 20px;
}

.emoji-box {
  position: relative;
  height: 200px;
  padding: 5px 0;
  box-sizing: border-box;
  margin-bottom: -200px;
}

.emoji-cell {
  width: 9.09%;
  height: 33px;
  display: inline-block;
}

.emoji-cell image {
  width: 23px;
  height: 23px;
  padding: 5px;
  border-radius: 3px;
}

.emoji-move-in {
  -webkit-animation: emoji-move-in 0.3s forwards;
  animation: emoji-move-in 0.3s forwards;
}

.emoji-move-out {
  -webkit-animation: emoji-move-out 0.3s forwards;
  animation: emoji-move-out 0.3s forwards;
}

.no-emoji-move {
  -webkit-animation: none;
  animation: none;
}

@-webkit-keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@-webkit-keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

@keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

@-webkit-keyframes pd-left-move {
  0% {
    padding-left: 5px;
  }

  100% {
    padding-left: 15px;
  }
}

@keyframes pd-left-move {
  0% {
    padding-left: 5px;
  }

  100% {
    padding-left: 15px;
  }
}